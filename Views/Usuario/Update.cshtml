<!DOCTYPE html>
<html>
<head>
    @model UsuarioViewModel
    @{
        ViewData["Title"] = "Editar usuário";
    }
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Editar Usuário</h1>
    </div>

    <form asp-controller="Usuario" asp-action="Update" method="post">

        <input type="hidden" asp-for="Id" />
        <div class="form-row d-flex">
            <div class="col-md-6 me-2">
                <label for="nome">Nome</label> @Html.ValidationMessageFor(x => x.Nome)
                <input type="text" asp-for="Nome" class="form-control" placeholder="Informe o nome">
            </div>
            <div class="col-md-6 me-2">
                <label for="email">E-mail</label> @Html.ValidationMessageFor(x => x.Email)
                <input type="email" asp-for="Email" class="form-control" placeholder="Informe o e-mail">
            </div>
        </div>
        <br />
        <div class="form-row d-flex">
            <div class="col-md-6 me-2">
                <label for="login">Login</label> @Html.ValidationMessageFor(x => x.Login)
                <input type="text" asp-for="Login" class="form-control" placeholder="Informe o login">
            </div>
        </div>
        <br />

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-1">Alterar</button>
            <a class="btn btn-danger" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
        </div>
    </form>
</body>
</html>